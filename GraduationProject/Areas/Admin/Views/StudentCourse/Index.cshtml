@using Utility
@{
    ViewData["Title"] = "Student Courses";
}

@using Models

@model List<char>

<div class="row mb-3">
    <div class="col-9">
        <h1 style="font-size: 2.5em; font-weight: bold;">Student Courses</h1>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th style="width: 10%;" scope="col">Level</th>
            <th style="width: 40%;" scope="col">Total Level Grade</th>
            <th style="width: 50%;" scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr class="table-light">
                <td>@(i+1)</td>
                <td>@Model[i]</td>
                <td>
                    <a href="/Admin/StudentCourse/Index2?studentId=@ViewBag.studentId&level=@(Enum.GetName(typeof(EnumLevel), i+1))" class="btn btn-dark" style="margin-left: 10px;">Courses</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row mb-3">
    <div class="col-9">
        <h1 style="font-size: 1.5em; font-weight: bold;">Total Grade : @ViewBag.totalgrade</h1>
    </div>
</div>

@if (User.IsInRole(SD.AdminRole))
{
    <div class="mt-4">
        <a href="/Admin/Management/Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
}