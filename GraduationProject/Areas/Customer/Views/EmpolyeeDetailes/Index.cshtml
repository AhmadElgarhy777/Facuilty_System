@model Employee
<style>
    body {
        background-color: #f4f4f9;
    }

    .card-custom {
        border-radius: 15px;
        transition: all 0.3s ease-in-out;
    }

        .card-custom:hover {
            transform: translateY(-5px);
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
        }

    .card-primary {
        background-color: #007bff;
        color: white;
    }

    .card-secondary {
        background-color: #6c757d;
        color: white;
    }

    .card-success {
        background-color: #28a745;
        color: white;
    }

    .card-danger {
        background-color: #dc3545;
        color: white;
    }

    .card-warning {
        background-color: #ffc107;
        color: black;
    }

    .card-info {
        background-color: #17a2b8;
        color: white;
    }

    .card-light {
        background-color: #f8f9fa;
        color: black;
    }

    .card-dark {
        background-color: #343a40;
        color: white;
    }

    .schedule-table {
        margin-top: 30px;
        border-radius: 15px;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
    }

        .schedule-table th, .schedule-table td {
            padding: 15px;
            text-align: center;
        }

        .schedule-table thead {
            background-color: #343a40;
            color: white;
        }

        .schedule-table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    .details-table {
        margin-top: 30px;
        border-radius: 15px;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
    }

        .details-table th, .details-table td {
            padding: 15px;
            text-align: center;
        }

        .details-table thead {
            background-color: #007bff;
            color: white;
        }

        .details-table tbody tr:nth-child(even) {
            background-color: #f2f2f2;
        }
</style>
<div class="container mt-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card card-custom card-primary">
                <div class="card-body">
                    <h5 class="card-title">Name</h5>
                    <h5 class="card-title">@Model.FName @Model.MName @Model.LName</h5>
                    <i class="fa fa-user-graduate fa-3x float-end"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-custom card-secondary">
                <div class="card-body">
                    <h5 class="card-title">SSN</h5>
                    <p class="card-text">@Model.SSN</p>
                    <i class="fa fa-address-card fa-3x float-end"></i>
                </div>
            </div>
        </div>

        
        <div class="col-md-4">
            <div class="card card-custom card-warning">
                <div class="card-body">
                    <h5 class="card-title">Gender</h5>
                    <p class="card-text">@Model.Gender</p>
                    <i class="fa fa-transgender-alt fa-3x float-end"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-custom card-info">
                <div class="card-body">
                    <h5 class="card-title">Address</h5>
                    <p class="card-text">@Model.Address</p>
                    <i class="fa fa-map-marker fa-3x float-end"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-custom card-light">
                <div class="card-body">
                    <h5 class="card-title">Email</h5>
                    <p class="card-text">@Model.Email</p>
                    <i class="fa fa-envelope fa-3x float-end"></i>
                </div>
            </div>
        </div>
       
        <div class="col-md-4">
            <div class="card card-custom card-dark">
                <div class="card-body">
                    <h5 class="card-title">Nationality</h5>
                    <p class="card-text">@Model.Nationailty</p>
                    <i class="fa fa-flag fa-3x float-end"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-custom card-primary">
                <div class="card-body">
                    <h5 class="card-title">Age</h5>
                    <p class="card-text">@ViewBag.age</p>
                    <i class="fa fa-birthday-cake fa-3x float-end"></i>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-custom card-dark">
                <div class="card-body">
                    <h5 class="card-title">Phone Number</h5>
                    <p class="card-text">@Model.PhoneNumer</p>
                    <i class="fa fa-flag fa-3x float-end"></i>
                </div>
            </div>
        </div>
       

    </div>




</div>