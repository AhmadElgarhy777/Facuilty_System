@using Utility
@model List<Course>

<div class="container mt-4">
    <!-- Header Section -->
    <div class="row mb-3">
        <div class="col-12">
            <h2 class="text-center fw-bold">Assistant Courses</h2>
        </div>
    </div>

    <!-- Table Section -->
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-primary">
                <tr>
                    <th >Name</th>
                    <th >Hours</th>
                    <th >Degree</th>
                    <th >Document</th>
                    <th >Course Level</th>
                    <th >Department</th>
                    <th >Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-light align-middle">
                        <td>@item.Name</td>
                        <td>@item.Hours</td>
                        <td>@item.Degree</td>
                        <td>
                            <a href="~/CourseDocument/@item.DocumentUrl" target="_blank" class="btn btn-link  text-decoration-none">
                                <i class="bi bi-file-earmark"></i> Document
                            </a>
                        </td>
                        <td>@item.CourseLevel</td>
                        <td><span>@item.Department.Name</span> </td>
                        <td>
                            
                                <div class ="d-flex flex-column gap-2">
                                    <a asp-action="Create" asp-controller="Sections" asp-area="Customer" asp-route-CourseID="@item.CourseId" class="btn btn-primary btn-sm">
                                        <i class="bi bi-plus-square"></i> Add Section
                                    </a>
                                    <a asp-action="Index2" asp-controller="Sections" asp-area="Customer" asp-route-CourseID="@item.CourseId" class="btn btn-primary btn-sm">
                                        <i class="bi bi-collection"></i> Sections
                                    </a>
                                </div>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Back Button Section -->
    @if (User.IsInRole(SD.AdminRole))
    {
        <div class="mt-4 ">
            <a href="/Admin/Management/Index_Professor" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    }
</div>
