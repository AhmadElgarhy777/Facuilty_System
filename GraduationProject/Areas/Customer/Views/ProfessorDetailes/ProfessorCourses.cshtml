@using Utility
@model List<Course>

<div class="container mt-4">
    <!-- Header Section -->
    <div class="row mb-3">
        <div class="col-12">
            <h2 class="text-center fw-bold">Professor Courses</h2>
        </div>
    </div>

    <!-- Table Section -->
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>Name</th>
                    <th>Hours</th>
                    <th>Degree</th>
                    <th>Document</th>
                    <th>Course Level</th>
                    <th>Member Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Hours</td>
                        <td>@item.Degree</td>
                        <td>
                            <a href="~/CourseDocument/@item.DocumentUrl" target="_blank" class="btn btn-link  text-decoration-none">
                                <i class="bi bi-file-earmark"></i> Document
                            </a>
                        </td>
                        <td>@item.CourseLevel</td>
                        <td>@item.Department.Name</td>
                        <td>
                            <div class="d-flex flex-column gap-2">
                                <a asp-action="StudentCourses" asp-route-CourseID="@item.CourseId" class="btn btn-primary btn-sm">
                                    <i class="bi bi-bar-chart"></i> Student Courses
                                </a>
                                <a asp-action="Index" asp-controller="Assignment" asp-area="Customer" asp-route-CourseId="@item.CourseId" class="btn btn-primary btn-sm">
                                    <i class="bi bi-pencil-square"></i> Assignments
                                </a>
                                <a asp-action="Create" asp-controller="Lectures" asp-area="Customer" asp-route-CourseID="@item.CourseId" class="btn btn-primary btn-sm">
                                    <i class="bi bi-plus-square"></i> Add Lecture
                                </a>
                                <a asp-action="Index2" asp-controller="Lectures" asp-area="Customer" asp-route-CourseID="@item.CourseId" class="btn btn-primary btn-sm">
                                    <i class="bi bi-collection"></i> Lectures
                                </a>
                                <a asp-action="Index2" asp-controller="Sections" asp-area="Customer" asp-route-CourseID="@item.CourseId" class="btn btn-primary btn-sm">
                                    <i class="bi bi-list-ul"></i> Sections
                                </a>
                            </div>
                           
                              
                              
                              
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Back Button Section -->
    <div class="mt-4 ">
        <a href="/Admin/Management/Index_Professor" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
