
@model List<Course>
<h2>Professor Courses</h2>
<div class="row">

    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width: 25%;" scope="col">Name</th>
                <th style="width: 5%;" scope="col">Hours</th>
                <th style="width: 5%;" scope="col">Degree</th>
                <th style="width: 15%;" scope="col">Document</th>
                <th style="width: 10%;" scope="col">Course Level</th>
                <th style="width: 10%;" scope="col">Department</th>
                <th style="width: 30%;" scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <td>@item.Name</td>
                    <td>@item.Hours</td>
                    <td>@item.Degree</td>
                    <td><a href="~/CourseDocument/@item.DocumentUrl" target="_blank">Document</a></td>
                    <td>@item.CourseLevel</td>
                    <td>@item.Department.Name</td>

                    <td>
                        <a asp-action="StudentCourses" asp-route-CourseID="@item.CourseId" class="btn btn-dark" style="margin-left: 10px;">StudentCourse</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

   

    