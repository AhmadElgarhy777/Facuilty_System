@model List<Course>
<h2>Professor Courses</h2>
<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th style="width: 25%;" scope="col">Name</th>
                <th style="width: 5%;" scope="col">Hours</th>
                <th style="width: 5%;" scope="col">Degree</th>
                <th style="width: 15%;" scope="col">Document</th>
                <th style="width: 10%;" scope="col">Course Level</th>
                <th style="width: 10%;" scope="col">Department</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <td>@item.Name</td>
                    <td>@item.Hours</td>
                    <td>@item.Degree</td>
                    <td><a href="~/CourseDocument/@item.DocumentUrl" target="_blank">Document</a></td>
                    <td>@item.CourseLevel</td>
                    <td>@item.Department.Name</td>
                </tr>
                <tr class="table-secondary">
                    <td colspan="6">
                        <div class="d-flex flex-wrap gap-2 justify-content-start">
                            <a asp-action="StudentCourses" asp-route-CourseID="@item.CourseId" class="btn btn-primary btn-sm">
                                <i class="bi bi-book"></i> StudentCourse
                            </a>
                            <a asp-action="Index" asp-controller="Assignment" asp-area="Customer" asp-route-CourseId="@item.CourseId" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Assignment
                            </a>
                            <a asp-action="Index2" asp-controller="Lectures" asp-area="Customer" asp-route-CourseID="@item.CourseId" class="btn btn-primary btn-sm">
                                <i class="bi bi-collection"></i> Lectures
                            </a>
                            <a asp-action="Create" asp-controller="Lectures" asp-area="Customer" asp-route-CourseID="@item.CourseId" class="btn btn-primary btn-sm">
                                <i class="bi bi-plus-square"></i> Add Lecture
                            </a>
                            <a asp-action="Index2" asp-controller="Sections" asp-area="Customer" asp-route-CourseID="@item.CourseId" class="btn btn-primary btn-sm">
                                <i class="bi bi-collection"></i> Sections
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
