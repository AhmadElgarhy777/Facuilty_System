<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Graduation Project</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background: linear-gradient(135deg, #4e73df, #224abe);
            color: white;
            display: flex;
            flex-direction: column;
            padding: 20px 10px;
        }

            .sidebar .brand {
                text-align: center;
                font-size: 1.5rem;
                font-weight: bold;
                color: #fff;
                margin-bottom: 20px;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                .sidebar ul li a {
                    display: flex;
                    align-items: center;
                    color: #d1d3e2;
                    text-decoration: none;
                    padding: 10px;
                    margin-bottom: 10px;
                    border-radius: 5px;
                    transition: all 0.3s ease-in-out;
                }

                    .sidebar ul li a:hover {
                        background-color: #2c2f33;
                        color: white;
                    }

                    .sidebar ul li a i {
                        margin-right: 10px;
                        font-size: 1.2rem;
                    }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        footer {
            margin-top: 20px;
            background: #224abe;
            color: white;
            text-align: center;
            padding: 10px;
        }

        .dark-mode {
            background-color: #121212;
            color: #c7c7c7;
        }

            .dark-mode .sidebar {
                background: #1a1a2e;
            }

            .dark-mode footer {
                background: #1a1a2e;
            }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="brand">Computer Science Faculty</div>
        <ul>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>
            <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Registeration</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Registeration" asp-action="AddAdmin">Add Admin</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Registeration" asp-action="AddStudent">Add Student</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Registeration" asp-action="AddProfessor">Add Professor</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Registeration" asp-action="AddAssistant">Add Assistant</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Registeration" asp-action="AddEmpolyee">Add Empolyee</a>
                              

                                <div class="dropdown-divider">

                                <a class="dropdown-item" asp-area="Admin" asp-controller="Management" asp-action="Index">Details Student</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Management" asp-action="Index_Professor">Details Proffesors</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Management" asp-action="Index_Assistant">Details Assistants</a>
                                 <a class="dropdown-item" asp-area="Admin" asp-controller="Management" asp-action="Index_Empolyee">Details Empolyee</a>

                                </div>
                            </div>

                        </li>
                         <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Details</a>
                            <div class="dropdown-menu">
                               
                               

                                <a class="dropdown-item" asp-area="Admin" asp-controller="Management" asp-action="Index"> Student</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Management" asp-action="Index_Professor"> Proffesors</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Management" asp-action="Index_Assistant"> Assistants</a>
                                 <a class="dropdown-item" asp-area="Admin" asp-controller="Management" asp-action="Index_Empolyee"> Empolyee</a>

                                
                            </div>

                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Department</a>
                            <div class="dropdown-menu">
                               
                               

                                <a class="dropdown-item" asp-area="Admin" asp-controller="Department" asp-action="Index"> Departement</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Department" asp-action="Create">Add Departement</a>
@*                                 <a class="dropdown-item" asp-area="Admin" asp-controller="Department" asp-action="Edit">Edit Departement</a>
 *@                               
                                
                            </div>
                                
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Courses</a>
                            <div class="dropdown-menu">
                               
                               

                                <a class="dropdown-item" asp-area="Admin" asp-controller="Course" asp-action="Index"> Course</a>
                                <a class="dropdown-item" asp-area="Admin" asp-controller="Course" asp-action="Create">Add Course</a>
@*                                 <a class="dropdown-item" asp-area="Admin" asp-controller="Course" asp-action="Edit">Edit Course</a>
 *@                               
                                
                            </div>

                        </li>     
                        </ul>
        <Partial name="_LoginPartial.cshtml"></Partial>

    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <header class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h4">@ViewData["Title"]</h1>
            <button id="darkModeToggle" class="btn btn-outline-secondary"><i class="bi bi-moon"></i> Dark Mode</button>
        </header>
        <main>
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        &copy; @DateTime.Now.Year - Graduation Project
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        // Toggle Dark Mode
        const toggleBtn = document.getElementById('darkModeToggle');
        toggleBtn.addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            toastr.success('Dark Mode Toggled');
        });

        // Toast Example
        window.onload = () => toastr.info('Welcome to the Graduation Project!');
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
