<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Edukate - Online Education Website Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #2878EB;
            --dark: #120F2D;
        }

        body {
            font-family: "Roboto", sans-serif;
            color: #6B6A75;
            background-color: #FFFFFF;
        }

        .main-content {
            margin-bottom: 100px;
            padding: 20px;
        }
        /* Hero Section */
        .hero-section {
            position: relative;
            width: 100%;
            height:77vh; /* Adjust as needed */
            background-image: url('~/Img/WorkImg/Cover.png');
            background-position: center center;
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

    .hero-section::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(40, 120, 235, 0.7); /* Blue overlay with transparency */
                z-index: 1;
            }

            .hero-section .hero-content {
                position: relative;
                z-index: 2;
                color: #ffffff;
                text-align: center;
                padding-top: 20vh; /* Centers text vertically */
            }

            .hero-section h1 {
                font-size: 3.5rem;
                font-weight: bold;
            }

            .hero-section p {
                font-size: 1.5rem;
            }

        .fa-envelope {
            font-size: 15px;
        }

        .fa-book-reader {
            font-size: 30px;
        }
        /* Footer */
        footer {
            text-align: center;
            padding: 10px;
            background-color: var(--dark);
            color: #fff;
            margin-top: 50px;
        }
    </style>
</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid bg-dark">
        <div class="row py-2 px-lg-5">
            <div class="col-lg-6 text-center text-lg-left mb-2 mb-lg-0">
                <div class="d-inline-flex align-items-center text-white">
                    <small class="px-3">|</small>
                    <small><i class="fa fa-envelope mr-4"></i> info@example.com</small>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid p-0">
        <nav class="navbar navbar-expand-lg bg-white navbar-light py-3 py-lg-0 px-lg-5">
            <a asp-action="Index" asp-area="Customer" asp-controller="Home" class="navbar-brand ml-lg-3">
                <h1 class="m-0 text-uppercase text-primary"><i class="fa fa-book-reader mr-3"></i>Faculty System</h1>
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between px-lg-3" id="navbarCollapse">
                <div class="navbar-nav mx-auto py-0">
                    <a asp-action="Index" asp-area="Customer" asp-controller="Home" class="nav-item nav-link active">Home</a>
                    <a asp-action="About" asp-area="Customer" asp-controller="Home" class="nav-item nav-link">About</a>
                    <a asp-action="Contact" asp-area="Customer" asp-controller="Home" class="nav-item nav-link">Contact</a>
                </div>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary py-2 px-4 d-none d-lg-block">LogIn</a>
            </div>
        </nav>
    </div>
    <!-- Navbar End -->
    <!-- Hero Section Start -->
    <div class="hero-section">
        <div class="hero-content">
            <h1>Welcome To our Project</h1>
            <p>Facuilty System</p>
        </div>
    </div>
    <!-- Hero Section End -->
    <!-- Main Content -->
    <div class="main-content">
        <main>
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        &copy; @DateTime.Now.Year - Graduation Project
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
